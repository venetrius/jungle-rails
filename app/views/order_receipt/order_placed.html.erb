<!DOCTYPE html>
<html>
  <head>
    <meta content='text/html; charset=UTF-8' http-equiv='Content-Type' />
  </head>
  <body>
  <div>
  <h4>Thank you for your order!</h4>
  </div>
    <header>
      <h1>Order #<%= @order.id %></h1>
    </header>
  
    <div>
      <table>
        <thead>
          <tr>
            <th>Product</th>
            <th>Unit Price</th>
            <th>Quantity</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
            <% @order_products.each do |item| %>
            <tr>
                <td>
                  <h4><%= item[:product].name %></h4>
                </td>
                <td>
                  <%= item[:product].price %>
                </td>
                <td>
                  <%= item[:quantity] %>
                </td>
                <td>
                  <%= item[:product].price * item[:quantity].to_i %>
                </td>
            </tr>
            <% end %>

        </tbody>
        <tfoot>
          <tr>
            <th colspan="3">
              TOTAL:
            </th>
            <th>
              <%= @order.total_cents / 100.0 %>
            </th>
          </tr>
        </tfoot>
      </table>
    </div>
  </body>
  </html>